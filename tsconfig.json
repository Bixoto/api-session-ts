{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "moduleDetection": "force",
    "module": "preserve",
    "moduleResolution": "bundler",
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "isolatedDeclarations": true,
    "verbatimModuleSyntax": true
  },
  "include": [
    "src"
  ]
}
